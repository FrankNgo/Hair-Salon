@{
  Layout = "_Layout";
}

<h1>Add a new client</h1>
<form method="post" action="/stylists/@Model.GetId()/clients">
  <div class="form-group">
    <label for="client-first-name">Client First Name</label>
    <input type="text" name="client-first-name" class="form-control">
  </div>
  <div class="form-group">
    <label for="client-last-name">Client Last Name</label>
    <input type="text" name="client-last-name" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
</form>
<a href="/clients">Return Home</a>
