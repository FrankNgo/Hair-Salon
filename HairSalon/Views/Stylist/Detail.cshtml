@{
  Layout = "_Layout";
}

<h1><p>@Model["stylist"].GetName()</p></h1>

<h2>Clients</h2>
<a href='/stylists/@Model["stylist"].GetId()/clients/new'>Add new client</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Delete</th>
    </thead>
    <tbody>
        @foreach(var client in Model["clients"])
        {
            <tr>
                <td>@client.clientName</td>
                <td><a href="/clients/@client.GetId()"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                <td><a href="/clients/@client.GetId()/delete"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/">Return Home</a>
