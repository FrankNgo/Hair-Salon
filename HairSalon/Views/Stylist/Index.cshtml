@{
  Layout = "_Layout";
}

<h1>Hair Salon</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Stylist Name</th>
      <th>View Clients</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  @foreach (var stylist in Model)
  {
    <tr>
      <td>@stylist.GetName()</td>
      <td><a href="/stylists/@stylist.GetId()"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span></a></td>
      <td><a href="/stylists/@stylist.GetId()/delete"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></td>
    </tr>
  }
  </tbody>
</table>
<a href="/stylists/new">Add New Stylist</a>
